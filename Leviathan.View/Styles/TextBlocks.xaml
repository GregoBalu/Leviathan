<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Leviathan.View"
                    >
    <Style TargetType="TextBlock" x:Key="GameTextBlock" >
        <Setter Property="VerticalAlignment" Value="Stretch" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="Padding" Value="10,10,10,10" />
        <Setter Property="Margin" Value="5,5,5,5" />
    </Style>
    
    <Style TargetType="TextBlock" BasedOn="{StaticResource GameTextBlock}" x:Key="BackgroundedGameTextBlock">
        <Setter Property="Background">
            <Setter.Value>
                <ImageBrush ImageSource="pack://application:,,,/Leviathan.View;component/Resources/papyrus.png" />
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="TextBlock" BasedOn="{StaticResource GameTextBlock}" x:Key="InfoTextBlock">
        <Setter Property="Background">
            <Setter.Value>
                <ImageBrush ImageSource="pack://application:,,,/Leviathan.View;component/Resources/info.png" />
            </Setter.Value>
        </Setter>
    </Style>


</ResourceDictionary>